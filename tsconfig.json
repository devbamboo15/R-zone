{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "assets/*": ["./src/assets/*"],
      "src/*": ["./src/*"]
		},
		"skipLibCheck": true
  },
  "exclude": ["node_modules", "build", "dist"]
}
